<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- EditText for Saved Data -->
    <EditText
        android:id="@+id/saved_data_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter data to save" />

    <!-- Button to Save Data -->
    <Button
        android:id="@+id/saved_data_Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Data" />

    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Buttons for Managing Contacts -->
    <Button
        android:id="@+id/loadContacts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Load Contacts" />

    <Button
        android:id="@+id/saveContacts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Contacts" />

    <Button
        android:id="@+id/addContact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Contact" />

    <Button
        android:id="@+id/clear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Clear Contacts" />

    <!-- Button to View Data -->
    <Button
        android:id="@+id/btn_data_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Data" />
</LinearLayout>
